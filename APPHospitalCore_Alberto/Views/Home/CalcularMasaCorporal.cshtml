@section scripts
{
    <script>
        $(function () {
            $("#btnCalcular").click(function () {
                var peso = $("#peso").val();
                var altura = $("#altura").val();
                if (isNaN(peso) == false && isNaN(altura) == false) {
                    var IMC = (peso / Math.pow(altura, 2)).toFixed(1);
                    $("#masaCorporal").val(IMC);
                    $("#mensaje").html("");
                }
                else {
                    $("#masaCorporal").val("");
                    $("#mensaje").html("Los datos introducidos no son validos");
                    $("#mensaje").css("color", "red");
                }
            })
        })
    </script>
}