@using HospitalNuget.Models
@model Usuarios

@{
    ViewBag.Title = "RegistrarUsuario";
}

<h2>Registro</h2>
<hr />
<form asp-controller="Manage" asp-action="RegistrarUsuario" method="post" class="login100-form validate-form flex-sb flex-w">
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-50 p-b-90">
                <div class="form-horizontal" asp-validation-summary="None">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            @if (ViewData["validarEmail"] != null)
                            {
                                <span class="text-danger">@ViewData["validarEmail"].ToString()</span>
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ComparePassword" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="ComparePassword" class="form-control" />
                            <span asp-validation-for="ComparePassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Registrarse" class="login100-form-btn" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-info">Volver al inicio</a>
</div>
